@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap');

/*

---- COLORS
Primary: #e67e22
Tints: #fdf2e9
Shades: #cf711f
#fae5d3

---- GREY
ligntest grey allowed on #fdf2e9: #6f6f6f

---- FONT WEIGHT
Default: 400
Medium: 500
Semi-bold: 600
Bold: 799

---- BORDER-RADIUS
Default: 9px
Medium: 11px

---- LINE HEIGHT
Default: 1
Samll: 1.05
Medium: 1.2
Paragraph default: 1.06

--- LETTER SPACING
-0.5px
0.75px

*/

/********************************/
/* GENERALS*/
/********************************/

$PRIMARY_COLOR = #e67e22
$SHADES_COLOR = #cf711f
$TINTS_COLORS = #fdf2e9

*
    margin 0
    padding 0
    box-sizing border-box

html
    font-size 62.5%

body
    font-family "Rubik", sans-serif
    line-height 1
    font-weight 400
    color #555

/********************************/
/* GENERAL REUSABLE COMPONENTS */
/********************************/

.grid 
    display grid
    column-gap 6.4rem
    row-gap 9.6rem

.grid__2-cols
    grid-template-columns: repeat(2, 1fr)

.grid__3-cols
    grid-template-columns: repeat(3, 1fr)

.grid__center-v
    align-items center

.container
     max-width 120rem
     padding 0 3.2rem
     margin 0 auto

.heading-primary, .heading-secondary, .heading-tertiary
    color #333
    color #45260a
    font-weight 700
    letter-spacing -0.5px

.heading-primary
    font-size 5.2rem
    line-height 1.05
    margin-bottom 3.2rem

.heading-secondary
    font-size 4.4rem
    line-height 1.2
    margin-bottom 9.6rem

.heading-tertiary
    font-size 3rem
    line-height 1.2
    margin-bottom 3.2rem

.subheading
    display block
    font-size 2rem
    font-weight 500
    color $SHADES_COLOR
    text-transform uppercase
    margin-bottom 1.6rem
    letter-spacing 0.75px

.btn:link, .btn:visited
    display inline-block
    padding 1.6rem 3.2rem
    text-decoration none
    border-radius 9px
    font-size 2rem
    font-weight 600
    transition all 0.3s

.btn__full
    &:link, &:visited
        background-color $PRIMARY_COLOR
        color #fff

    &:hover, &:active
        background-color $SHADES_COLOR
        color #fff

.btn__outline
    &:link, &:active
        background-color #fff
        color #555
    
    &:hover, &:active
        background-color $TINTS_COLORS
        color #555
        box-shadow inset 0 0 0 3px #fff

.link
    &:link, &:visited
        display inline-block
        text-decoration none
        color $PRIMARY_COLOR
        border-bottom 1px solid currentColor
        padding-bottom 2px
        transition all 0.3s
    &:hover, &:active
        color $SHADES_COLOR
        border-bottom: 1px solid transparent

/* HELPER CLASSES */

.margin-right-sm
    margin-right 1.6rem !important

.margin-bottom-md
    margin-bottom 4.8rem !important

.center-text
    text-align center

strong
    font-weight 500