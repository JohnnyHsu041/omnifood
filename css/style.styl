@import url('https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap');

/*

---- COLORS
Primary: #e67e22
Tints: #fdf2e9
Shades: #cf711f

---- FONT WEIGHT
Default: 400
Medium: 500
Semi-bold: 600
Bold: 799

---- BORDER-RADIUS
Default: 9px

---- LINE HEIGHT
Default: 1
Samll: 1.05
Medium: 1.2
Paragraph default: 1.06

--- LETTER SPACING
-0.5px
0.75px

*/

/********************************/
/* GENERALS*/
/********************************/

$PRIMARY_COLOR = #e67e22
$SHADES_COLOR = #cf711f
$TINTS_COLORS = #fdf2e9

*
    margin 0
    padding 0
    box-sizing border-box

html
    font-size 62.5%

body
    font-family "Rubik", sans-serif
    line-height 1
    font-weight 400
    color #555

/********************************/
/* GENERAL REUSABLE COMPONENTS */
/********************************/

.grid 
    display grid
    gap 9.6rem

.grid__2-cols
    grid-template-columns: repeat(2, 1fr)

.grid__3-cols
    grid-template-columns: repeat(3, 1fr)

.container
     max-width 120rem
     padding 0 3.2rem
     margin 0 auto

.heading-primary, .heading-secondary
    color #333
    color #45260a
    font-weight 700
    letter-spacing -0.5px

.heading-primary
    font-size 5.2rem
    line-height 1.05
    margin-bottom 3.2rem

.heading-secondary
    font-size 4.4rem
    line-height 1.2
    margin-bottom 9.6rem

.subheading
    display block
    font-size 2rem
    font-weight 500
    color $SHADES_COLOR
    text-transform uppercase
    margin-bottom 1.6rem
    letter-spacing 0.75px

.btn:link, .btn:visited
    display inline-block
    padding 1.6rem 3.2rem
    text-decoration none
    border-radius 9px
    font-size 2rem
    font-weight 600
    transition all 0.3s

.btn__full
    &:link, &:visited
        background-color $PRIMARY_COLOR
        color #fff

    &:hover, &:active
        background-color $SHADES_COLOR
        color #fff

.btn__outline
    &:link, &:active
        background-color #fff
        color #555
    
    &:hover, &:active
        background-color $TINTS_COLORS
        color #555
        box-shadow inset 0 0 0 3px #fff

.margin-right-sm
    margin-right 1.6rem !important

/********************************/
/* HEADER */
/********************************/

.header
    display flex
    justify-content space-between
    align-items center
    background-color $TINTS_COLORS
    
    /* because to make header sticky later*/
    height 9.6rem
    padding 0 4.8rem

.logo
    height 2.2rem


/********************************/
/* NAVIGATION*/
/********************************/

.main-nav-list
    list-style none
    display flex
    gap 3.2rem
    align-items center

.main-nav-link
    &:link, &:visited
        display inline-block
        transition all 0.3s 
        text-decoration none
        color #333
        font-weight 500
        font-size 1.8rem

    &:hover, &:active
        color $SHADES_COLOR

    &.nav-cta
        &:link, &:visited
            padding 1.2rem 2.4rem
            border-radius 9px
            color #fff
            background-color $PRIMARY_COLOR
        
        &:hover, &:active
            background-color $SHADES_COLOR


/********************************/
/* HERO SECTION*/
/********************************/

.section-hero
    height 100vh
    background-color $TINTS_COLORS
    padding 4.8rem 0 9.6rem 0

.hero
    max-width 130rem
    margin 0 auto
    padding 0 3.2rem
    display grid
    gap 9.6rem
    grid-template-columns 1fr 1fr
    align-items center


.hero-description
    font-size 2rem
    line-height 1.6
    margin-bottom 4.8rem

.hero-image
    width 100%


.delivered-meals
    display flex
    align-items center
    gap 1.8rem
    margin-top 8rem

.delivered-imgs
    display flex

    img
        height 4.8rem
        width 4.8rem
        border-radius 50%
        margin-right -1.8rem
        border 3px solid $TINTS_COLORS

    img:last-child
        margin 0
    

.delivered-text
    font-size 1.8rem
    font-weight 600

    span 
        color $SHADES_COLOR
        font-weight 700

/********************************/
/* HOW IT WORKS SECTION*/
/********************************/

.section-how
    padding 9.6rem 0
    
.step-img
    width 50%

        